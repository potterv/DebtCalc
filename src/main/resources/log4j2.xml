<!--                <TimeBasedTriggeringPolicy interval = "1" />-->
<!--                <SizeBasedTriggeringPolicy-->
<!--                        size="250 MB" />-->
<!--            </Policies>-->
<!--        </RollingFile>-->
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="Console" />
            <AppenderRef ref="MyFile" />
        </Root>
    </Loggers>

</Configuration>